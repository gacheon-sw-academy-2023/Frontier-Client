{
  "extends": ["@commitlint/config-conventional"],
  "parserPreset": "conventional-changelog-conventionalcommits",
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "build",
        "ci",
        "chore",
        "docs",
        "feat",
        "fix",
        "perf",
        "style",
        "test",
        "revert",
        "rename",
        "design"
      ]
    ]
  },
  "prompt": {
    "questions": {
      "type": {
        "description": "커밋 타입 선택"
      }
    }
  }
}